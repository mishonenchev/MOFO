@{ 
    Layout = "";
}
<!DOCTYPE html>
 
<html lang="bg">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>CoreUI Pro Bootstrap Admin Template</title>

    @Styles.Render("~/Content/admin")
</head>
<body class="app flex-row align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="clearfix">
                    <h1 class="float-left display-3 mr-4">404</h1>
                    <h4 class="pt-3">Вашият профил не е потвърден!</h4>
                    <p class="text-muted">Ще се свържем с вас до 48 часа, за да потвърдим вашия акаунт.</p>
                </div>
                <div class="input-prepend input-group">


                    @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", style="width: 100%" }))
                    {
                        @Html.AntiForgeryToken()
                        <button class="btn btn-info w-100 mt-2" type="submit">Излез от профила</button>
                   }
                </div>
            </div>
        </div>
    </div>

</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/dashboard")
</html>
